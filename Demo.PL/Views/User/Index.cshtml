@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All User</h1>
<br />
<br />
<a asp-controller="User" asp-action="Create" class="btn btn-primary mb-2 ">Create New Employee</a>

<div class="row justify-content-center align-items-center my-4">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By User" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@Html.DisplayFor(M => User.Email)</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(" " , User.Roles)</td>

                    <partial model="User.Id" name="_ButtonsPartial" />


                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div>
        <h3 class="m-5 alert alert-warning">
            There is no Users
        </h3>
    </div>
}



