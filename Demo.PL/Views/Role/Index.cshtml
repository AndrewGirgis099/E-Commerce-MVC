@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-primary mb-2 ">Create New Roles</a>

<div class="row justify-content-center align-items-center my-4">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" class="form-control" name="searchInp" placeholder="Search By RoleName" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </form>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.RoleName)</td>

                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>


                    <partial model="Role.Id" name="_ButtonsPartial" />


                </tr>
            }

        </tbody>
    </table>

}
else
{
    <div>
        <h3 class="m-5 alert alert-warning">
            There is no Roles
        </h3>
    </div>
}



